<body>
    <h1>Ăn gì ở Hà Nội</h1>

    <form action="/route" method="post" class=" card" id="form-routing">
        <div class="card-header">
            Tìm đường
        </div>
        <div class="card-body">
            <div class="input-group">
                <span class="input-group-text fs-6"> Điểm đi </span>
                <div class="input-group mb-3">
                    <button class="btn btn-sm  btn-secondary fs-6" type="button" id="choose-button-1">Chọn</button>
                    <input type="text" class="form-control" placeholder="" aria-label="LongLat"
                        aria-describedby="choose-button-1" id="departLocation" name="departLocation">
                </div>
            </div>
            <div class="input-group">
                <span class="input-group-text fs-6">Điểm đến</span>
                <div class="input-group mb-3">
                    <button class="btn btn-sm btn-secondary fs-6" type="button" id="choose-button-2">Chọn</button>
                    <input type="text" class="form-control" placeholder="" aria-label="LongLat"
                        aria-describedby="choose-button-2" id="destLocation" name="destLocation">
                </div>
            </div>
            <div class="form-check">
                <input class="form-check-input" type="radio" name="moveType" id="radio1" value="Đi xe"
                    checked>
                <label class="form-check-label" for="radio1">
                    Đi xe
                </label>
            </div>
            <div class="form-check">
                <input class="form-check-input" type="radio" name="moveType" id="radio2" value="Đi bộ">
                <label class="form-check-label" for="radio2">
                    Đi bộ
                </label>
            </div>
            <div class="input-group">
                <input class="btn btn-primary" type="submit" value="Submit">
            </div>
        </div>
    </form>


    <div id="map"></div>

